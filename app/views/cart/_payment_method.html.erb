<div id="payment-method" class="mt-4">
  <div class="font-medium my-2">Select Payment Method:</div>
  <div class="flex gap-2">
    <%= button_to update_payment_method_cart_path,
        method: :patch,
        params: { payment_method: 'cash' },
        class: "btn #{payment_method == 'cash' ? 'btn-primary' : 'btn-outline'} flex-1",
        data: { turbo_frame: "payment-method" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="2" y="6" width="20" height="12" rx="2"/>
        <circle cx="12" cy="12" r="2"/>
        <path d="M6 12h.01M18 12h.01"/>
      </svg>
      Cash
    <% end %>

    <%= button_to update_payment_method_cart_path,
        method: :patch,
        params: { payment_method: 'online' },
        class: "btn #{payment_method == 'online' ? 'btn-primary' : 'btn-outline'} flex-1",
        data: { turbo_frame: "payment-method" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
        <line x1="1" y1="10" x2="23" y2="10"/>
      </svg>
      Online
    <% end %>
  </div>
</div>