<% if customer %>
  <div class="alert alert-soft">
    <div>
      <p class="font-bold"><%= customer.name %> <span class="badge badge-error">Due: <%= number_to_currency customer.total_due, locale: :bn %></span></p>
      <p>Phone: <%= customer.phone %></p>
      <p>Address: <%= customer.address %></p>
    </div>
    <%= button_to "Remove", remove_customer_cart_path,
        method: :delete,
        class: "btn btn-sm btn-ghost",
        data: { turbo_frame: "customer-info" } %>
  </div>
<% end %>