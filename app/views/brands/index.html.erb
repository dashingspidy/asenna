<div class="grid grid-cols-2 gap-4 p-4">
  <section class="max-w-70 mt-4">
    <h3 class="text-xl mb-2"><%= @brand.persisted? ? "Edit brand" : "Add new brand/company" %></h3>
    <%= render "form", brand: @brand %>
  </section>
  <section>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>Brand Name</th>
          </tr>
        </thead>
          <tbody>
            <% @brands.each do %>
              <tr>
                <td><%= it.name %></td>
                <td><%= link_to "Edit", edit_brand_path(it), class: "btn" %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </section>
</div>
