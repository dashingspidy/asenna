<div class="grid grid-cols-2 gap-4 p-4">
  <section class="card bg-base-100 w-96 shadow-sm">
    <div class="card-body">
      <h3 class="card-title"><%= @brand.persisted? ? "Edit brand" : "Add new brand/company" %></h3>
      <%= render "form", brand: @brand %>
    </div>
  </section>
  <section>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>Brand Name</th>
          </tr>
        </thead>
          <tbody>
            <% @brands.each do %>
              <tr>
                <td class="uppercase"><%= it.name %></td>
                <td><%= link_to "Edit", edit_brand_path(it), class: "btn" %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
    <div class="flex items-center justify-center mt-4">
      <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </section>
</div>
