<%= form_with model: brand do |form| %>  
  <fieldset class="fieldset">
    <%= form.text_field :name, placeholder: "Enter Brand name", class: "input input-bordered w-full #{brand.errors[:name].any? ? 'input-error' : ''}" %>
  </fieldset>
  <fieldset class="fieldset">
    <%= form.submit brand.persisted? ? "Update" : "Add", class: "btn btn-primary" %>
  </fieldset>
<% end %>