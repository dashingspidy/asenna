<%= form_with model: product do |form| %>  
  <fieldset class="fieldset">
    <%= form.collection_select :brand_id, Brand.order(:name), :id, :name, {prompt: "Select a company/brand"}, { class: "select w-full" } %>
  </fieldset>
  <fieldset class="fieldset">
    <%= form.text_field :name, placeholder: "Product name", class: "input w-full" %>
  </fieldset>
  <fieldset class="fieldset">
    <%= form.textarea :description, placeholder: "Notes", class: "textarea w-full" %>
  </fieldset>
  <fieldset class="fieldset">
    <%= form.number_field :price, placeholder: "Product price", step: 0.5, class: "input w-full" %>
  </fieldset>
  <fieldset class="fieldset">
    <%= form.submit (product.persisted? ? "Update" : "Add"), class: "btn btn-primary mt-4" %>
  </fieldset>
<% end %>